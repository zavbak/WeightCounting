<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"

             tools:context="ru.anit.weightcounting.ui.activityes.DetailProductActivity">

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        android:text="id"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/tv_initial_barcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        android:text="Initial barcode"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        android:text="message"
        android:textSize="16dp"/>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        android:text="Name"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        android:text="Start"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/tv_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        android:text="Finish"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/tv_coefficient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        android:text="Coefficient"
        android:textSize="16dp"/>

    <Button
        android:id="@+id/bt_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save"/>

    <Button
        android:id="@+id/btShowListBarcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Подсчет"/>


</LinearLayout>
